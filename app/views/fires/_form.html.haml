= form_for(@fire) do |f|
  - if @fire.errors.any?
    #error_explanation
      %h2
        = pluralize(@fire.errors.count, "error")
        prohibited this fire from being saved:
      %ul
        - @fire.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :started_by
    %br/
    = f.text_field :started_by
  .field
    = f.label :acres
    %br/
    = f.number_field :acres
  .field
    = f.label :still_burning
    %br/
    = f.check_box :still_burning
  .field
    = f.label :state
    %br/
    = f.select :location_id, Location.all.collect{|d| [d.state, d.id]}
  .actions
    = f.submit